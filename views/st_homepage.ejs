	<form action="/Student" method="POST">
		<br><br><br>
		<div class="mb-md-5 mt-md-4 pb-5" style="width: 50%; margin:0 auto;">
			<div class="input-group mb-3">
				<input id="userinput" type="text" name="code" class="form-control"
					placeholder=" Please enter your enrollment code! " aria-label="Add an item"
					aria-describedby="basic-addon2">
				<div class="input-group-append">
					<button class="btn btn-primary btn-lg px-5" id="addButton" value="Add" type="submit"
						onclick="enroll()">Enroll</button>
				</div>
			</div>
			<% if(message.length>0) {%>
				<div class="alert alert-primary">
					<%= message %> 
				</div> 
				<%}%>
		</div>
	</form>

	<div class="box">
		<h2>Events</h2>
		<p><i>Check for upcoming Events</i></p>
		<button id="visit_btn" type="submit" class="btn btn-success">Visit</button>
		<script type="text/javascript">
			document.getElementById("visit_btn").onclick = function () {
				location.href = "Events";
			};
		</script>
	</div>
	<div class="box">
		<h2>Schedule</h2>
		<p><i>check for your timetable</i></p>
		<button id="visit_btn1" type="button" class="btn btn-success">Visit</button>
		<script type="text/javascript">
			document.getElementById("visit_btn1").onclick = function () {
				location.href = "schedule";
			};
		</script>
	</div>
	<div class="box">
		<h2>Your plans</h2>
		<p><i>check and make your own plans</i></p>
		<button id="visit_btn2" type="button" class="btn btn-success">Visit</button>
		<script type="text/javascript">
			document.getElementById("visit_btn2").onclick = function () {
				location.href = "Plan";
			};
		</script>
	</div>
